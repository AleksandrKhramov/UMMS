// 								My headers

//---------------------------------------------------------------------------
class TAbstractValue
{
private:
	String AbstractValue;
    unsigned int RequestAddress;
public:
    String Read();
    void Update(String Value);

	TAbstractValue();
	virtual ~TAbstractValue();
};
