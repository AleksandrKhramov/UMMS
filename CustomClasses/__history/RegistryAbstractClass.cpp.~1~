//---------------------------------------------------------------------------

#include "RegistryAbstractClass.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
//---------------------------------------------------------------------------
// онструктор
TRegistryAbstract::TRegistryAbstract(const char *Key)
{
	Registry = new TRegistry();
    Registry->RootKey = HKEY_LOCAL_MACHINE;
    Registry->OpenKey(Key, true);				//true вторым параметром означает, что если такого ключа не существует, то он будет создан

}
//---------------------------------------------------------------------------
//ƒеструктор
TRegistryAbstract::~TRegistryAbstract()
{
    Registry->CloseKey();
    Registry->Free();
}
//---------------------------------------------------------------------------

